<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Insurance"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/text_color"
        android:layout_marginStart="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vision_life_insurance_is_the_right_option_to_live_your_life_to_the_fullest"
        android:layout_below="@id/heading1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp">
    </TextView>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More"
        android:textColor="@color/readtext"
        android:layout_below="@id/heading1"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_83sdp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/text2"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="A Financial Security For Your Family"
                android:textColor="@color/black2"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_25sdp"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/text3"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/search_view"
                android:autofillHints="username"
                android:textSize="@dimen/_14ssp"
                android:paddingLeft="@dimen/_7sdp"
                android:drawableStart="@drawable/ic_outline_person"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Your Name"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/off_white"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/text3"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/search_view"
                android:autofillHints="phone"
                android:textSize="@dimen/_14ssp"
                android:paddingLeft="@dimen/_7sdp"
                android:drawableStart="@drawable/ic_outline_smartphone_24"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="+01 00000 00000"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/off_white"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/text3"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/search_view"
                android:autofillHints="phone"
                android:textSize="18sp"
                android:paddingLeft="@dimen/_10sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onClickDate"
                android:drawableStart="@drawable/ic_outline_calendar_month_24"
                android:drawablePadding="10dp"
                android:hint="DD-M-YYYY"
                android:inputType="phone"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/off_white"/>
            <Button
                android:layout_width="@dimen/_240sdp"
                android:id="@+id/submitButton"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@+id/topLinear"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textAllCaps="false"
                android:text="View Term Quotes"
                android:textColor="@color/black2"
                android:backgroundTint="@color/yellow"/>

            <TextView
                android:id="@+id/bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submitButton"
                android:textColor="@color/off_white"
                android:textSize="@dimen/_10ssp"
                android:textAlignment="center"
                android:text="By clicking on View Term Quotes you agree to our Privacy Policy and Terms of use"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>

