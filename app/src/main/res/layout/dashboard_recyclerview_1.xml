<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:text="One World,One Health"
                android:textColor="@color/text_colorBold"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/card_text2"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_below="@+id/card_text1"
                android:layout_marginStart="10dp"
                android:text="Health Insurance is a medical insurance policy that offers financial coverage."
                android:textColor="@color/light_grey"
                android:textSize="12sp">
            </TextView>

            <Button
                android:id="@+id/card_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/card_text2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black2"
                android:layout_marginBottom="20dp"
                android:background="@drawable/my_button"
                android:text="Read More"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:backgroundTint="@null">
            </Button>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_marginStart="5dp"
                android:layout_height="120dp"
                android:src="@drawable/health_bg"
                android:layout_toEndOf="@id/card_text1">
            </ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>