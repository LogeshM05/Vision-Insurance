<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_240sdp"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="One World,One Health"
                android:textColor="@color/text_colorBold"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/card_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/imageView"
                android:text="Health Insurance is a medical insurance policy that offers financial coverage."
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_10ssp">
            </TextView>

            <Button
                android:id="@+id/card_button"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/card_text2"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black2"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/my_button"
                android:text="Read More"
                android:textSize="@dimen/_10ssp"
                android:textAllCaps="false"
                app:backgroundTint="@null">
            </Button>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/card_text1"
                android:src="@drawable/health_bg">
            </ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>