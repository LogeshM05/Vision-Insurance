<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TravelInsuranceFragment">
    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Insurance"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/text_color"
        android:layout_marginStart="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vision_travel_insurance_is_a_unique_product_meant_to_protect_you_while_travelling"
        android:layout_below="@id/heading1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp">
    </TextView>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which country are you travelling to?"
        android:layout_below="@+id/text1"
        android:layout_alignStart="@+id/heading1"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="@color/black2">
    </TextView>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/heading1"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/search_view"
        android:autofillHints="username"
        android:textSize="@dimen/_14ssp"
        android:paddingLeft="@dimen/_8sdp"
        android:hint="Enter your destination country"
        android:inputType="textEmailAddress"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/light_grey"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popular Destinations"
        android:layout_below="@+id/editText1"
        android:layout_alignStart="@+id/heading1"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="@color/black2">
    </TextView>

        <CheckBox
            android:id="@+id/radioButton1"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_below="@id/text4"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="10dp"
            android:background="@drawable/radio_selector"
            android:button="@color/white"
            android:text="USA"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:textColor="@color/dark_grey" />

        <CheckBox
            android:id="@+id/radioButton2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="10dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/radioButton1"
            android:background="@drawable/radio_selector"
            android:button="@color/white"
            android:layout_below="@+id/text4"
            android:text="United Arab Emirates"
            android:textAlignment="center"
            android:textColor="@color/dark_grey" />

        <CheckBox
            android:id="@+id/radioButton3"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="10dp"
            android:layout_below="@id/text4"
            android:layout_toRightOf="@+id/radioButton2"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:text="France"
            android:textAlignment="center"
            android:textColor="@color/dark_grey" />


        <CheckBox
            android:id="@+id/radioButton4"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/radioButton1"
            android:button="@color/white"
            android:padding="10dp"
            android:layout_alignStart="@+id/radioButton1"
            android:textColor="@color/dark_grey"
            android:background="@drawable/radio_selector"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Germany" />

        <CheckBox
            android:id="@+id/radioButton5"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@drawable/radio_selector"
            android:button="@color/white"
            android:padding="10dp"
            android:layout_below="@id/radioButton1"
            android:layout_toRightOf="@+id/radioButton4"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="United Kingdom" />

        <CheckBox
            android:id="@+id/radioButton6"
            android:textColor="@color/dark_grey"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/radioButton5"
            android:layout_below="@id/radioButton3"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/radio_selector"
            android:button="@color/black"
            android:text="Thailand" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/radioButton6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/yellow"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/black2" />


</RelativeLayout>