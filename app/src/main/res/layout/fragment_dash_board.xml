<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dashBoard"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="40dp"
                    android:contentDescription="@string/profile"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_below="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="10dp"
                    android:text="Welcome,">
                </TextView>

                <TextView
                    android:id="@+id/name"
                    android:layout_below="@+id/image1"
                    android:layout_toEndOf="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="3dp"
                    android:text="Name">
                </TextView>

                <View
                    android:id="@+id/view1"
                    android:layout_width="360dp"
                    android:layout_below="@id/name"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/light_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/let_s_get_you_amp_your_family_insured"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">

                <ImageView
                    android:id="@+id/life"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/insurance"
                    android:src="@drawable/life" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/life"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/lifeInsurance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/travel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/life"
                    android:src="@drawable/airplane"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/travel"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/text1"
                    android:text="@string/travel_insurance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/travel"
                    android:src="@drawable/auto"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auto"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/text2"
                    android:text="@string/auto_insurance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/health"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text1"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/insurance"
                    android:src="@drawable/health_bg" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/health"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/health_insurance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/accidental"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text2"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/health"
                    android:src="@drawable/death"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accidental"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/text4"
                    android:text="@string/accidental_insurance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/retire"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text3"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/accidental"
                    android:src="@drawable/retirement"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/retire"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/text5"
                    android:text="@string/retirement_plans"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>