<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dashBoard"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_colorBold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="1dp"
                    android:layout_toRightOf="@+id/text1"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/heading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our services"
                    android:layout_below="@+id/recyclerView1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="27dp"/>
                <TextView
                    android:id="@+id/viewAll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:layout_below="@+id/recyclerView1"
                    android:layout_toRightOf="@+id/heading1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/view_text"
                    android:layout_marginStart="127dp"/>

                <ImageView
                    android:id="@+id/viewIcon"
                    android:layout_width="wrap_content"
                    android:background="@drawable/background_highlight"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_below="@+id/recyclerView1"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/viewAll1"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewIcon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/heading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Searches"
                    android:layout_below="@+id/recyclerView2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="27dp"/>

                <TextView
                    android:id="@+id/viewAll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:layout_below="@+id/recyclerView2"
                    android:layout_toRightOf="@+id/heading1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/view_text"
                    android:layout_marginStart="127dp"/>

                <ImageView
                    android:id="@+id/viewIcon2"
                    android:layout_width="wrap_content"
                    android:background="@drawable/background_highlight"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_below="@+id/recyclerView2"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/viewAll2"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/off_white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView3"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewIcon2"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>