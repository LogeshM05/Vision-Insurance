<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/retirement"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".fragment.RetirementPlansFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/form_background">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:layout_below="@+id/textView1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your name"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Phone Number"
                    android:textSize="@dimen/_14ssp"
                    android:layout_below="@+id/editText1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:layout_below="@+id/textView2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your number"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Email"
                    android:textSize="@dimen/_14ssp"
                    android:layout_below="@+id/editText2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:layout_below="@+id/textView3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Gender"
                    android:textSize="@dimen/_14ssp"
                    android:layout_below="@+id/editText3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:button="@color/white"
                        android:textColor="@color/black"
                        android:background="@drawable/radio_selector"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:padding="10dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="M" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/radio_selector"
                        android:button="@color/white"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="F" />

                    <RadioButton
                        android:id="@+id/other"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="10dp"
                        android:background="@drawable/radio_selector"
                        android:button="@color/black"
                        android:text="Other" />
                </RadioGroup>
                <CheckBox
                    android:id="@+id/conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:backgroundTint="@color/light_blue"
                    android:buttonTint="@color/light_blue"
                    android:text="I have agreed to the terms and condition" />
                <Button
                    android:id="@+id/submit"
                    android:layout_below="@+id/conditions"
                    android:layout_marginStart="@dimen/_95sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    app:backgroundTint="@null"
                    android:background="@drawable/button_bg">
                </Button>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>