<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/retirement"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".fragment.RetirementPlansFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="650dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/form_background">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="8dp"
                    android:layout_below="@+id/textView1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your name"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Phone Number"
                    android:textSize="18sp"
                    android:layout_below="@+id/editText1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="8dp"
                    android:layout_below="@+id/textView2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your number"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Email"
                    android:textSize="18sp"
                    android:layout_below="@+id/editText2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="8dp"
                    android:layout_below="@+id/textView3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textColorHint="@color/dark_grey"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Gender"
                    android:textSize="18sp"
                    android:layout_below="@+id/editText3"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/resul_blue"/>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:button="@color/white"
                        android:textColor="@color/black"
                        android:background="@drawable/radio_selector"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:text="M" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/radio_selector"
                        android:button="@color/white"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:text="F" />

                    <RadioButton
                        android:id="@+id/other"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/radio_selector"
                        android:button="@color/black"
                        android:text="Other" />
                </RadioGroup>
                <CheckBox
                    android:id="@+id/conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/light_blue"
                    android:buttonTint="@color/light_blue"
                    android:text="I have agreed to the terms and condition" />
                <Button
                    android:id="@+id/submit"
                    android:layout_below="@+id/conditions"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:backgroundTint="@color/resul_blue"
                    android:background="@drawable/button_bg">
                </Button>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>