<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HealthInsuranceFragment">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Insurance"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/text_color"
        android:layout_marginStart="@dimen/_20sdp"/>


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vision_health_insurance_policies_ensure_that_you_and_your_loved_ones_get_r"
        android:layout_below="@id/heading1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp">
    </TextView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who would you like to insure?"
        android:layout_below="@+id/text1"
        android:layout_alignStart="@+id/heading1"
        android:layout_marginTop="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black2">
    </TextView>

<!--    <View-->
<!--        android:id="@+id/view1"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_alignStart="@+id/heading1"-->
<!--        android:layout_height="3dp"-->
<!--        android:background="@color/yellow"-->
<!--        android:layout_below="@+id/text3"/>-->


    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/conditions"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:onClick="onClickCheckBox"
                android:text="Self"
                android:layout_margin="@dimen/_8sdp"
                android:textColor="@color/light_grey"
                tools:ignore="UsingOnClickInXml" />

            <CheckBox
                android:id="@+id/conditions2"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:onClick="onClickCheckBox"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:text="Son"
                android:textColor="@color/light_grey" />

            <CheckBox
                android:id="@+id/conditions3"
                android:layout_width="@dimen/_120sdp"
                android:onClick="onClickCheckBox"
                android:layout_margin="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:text="Father"
                android:textColor="@color/light_grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/conditions4"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:text="Spouse"
                android:onClick="onClickCheckBox"
                android:textColor="@color/light_grey" />

            <CheckBox
                android:id="@+id/conditions5"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:text="Daughter"
                android:layout_margin="@dimen/_8sdp"
                android:onClick="onClickCheckBox"
                android:textColor="@color/light_grey" />

            <CheckBox
                android:id="@+id/conditions6"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view"
                android:backgroundTint="@color/off_white2"
                android:buttonTint="@color/light_blue"
                android:text="Mother"
                android:layout_margin="@dimen/_8sdp"
                android:onClick="onClickCheckBox"
                android:textColor="@color/light_grey" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/topLinear"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/yellow"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/black2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By clicking on “Continue”, you agree to our Privacy Policy and Terms of use"
        android:layout_below="@+id/submitButton"
        android:textColor="@color/off_white"
        android:textSize="@dimen/_8ssp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/_22sdp">
    </TextView>
</RelativeLayout>